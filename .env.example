# Anthropic API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Model Configuration
CLAUDE_MODEL=claude-sonnet-4-5-20250929
MAX_TOKENS=4000
TEMPERATURE=0.7

# Application Settings
DEBUG=False
LOG_LEVEL=INFO
ENABLE_CACHING=True

# Pipeline Configuration
ENABLE_REAL_TIME_PROCESSING=True
BATCH_SIZE=32
CONFIDENCE_THRESHOLD=0.85

# Data Paths (optional overrides)
# DATA_INPUT_PATH=./data/inputs
# DATA_OUTPUT_PATH=./data/outputs
# MODELS_PATH=./models

# Feature Flags
ENABLE_PATTERN_DISCOVERY=True
ENABLE_ROOT_CAUSE_ANALYSIS=True
ENABLE_DEFECT_CLASSIFICATION=True
ENABLE_PREDICTIVE_MAINTENANCE=True
ENABLE_PROCESS_OPTIMIZATION=True
ENABLE_LEARNING_FEEDBACK=True

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
